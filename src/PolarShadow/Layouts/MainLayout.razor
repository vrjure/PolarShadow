@inherits LayoutComponentBase
@layout TopLevelLayout

<Layout Class="three-stage-layout">
    <Content Class="three-stage-layout-content">@Body</Content>
    <Footer class="three-stage-layout-footer">
        <Menu Mode="@MenuMode.Horizontal" Class="flex-menu">
            <MenuItem RouterLink="/" RouterMatch="NavLinkMatch.All">
                <Icon Type="home" Theme="outline" Class="menu-icon" />
            </MenuItem>
            <MenuItem>
                <Icon Type="clock-circle" Theme="outline" Class="menu-icon" />
            </MenuItem>
            <MenuItem RouterLink="/source" RouterMatch="NavLinkMatch.All">
                <Icon Type="compass" Theme="outline" Class="menu-icon" />
            </MenuItem>
            <MenuItem RouterLink="/mine" RouterMatch="NavLinkMatch.All">
                <Icon Type="user" Theme="outline" Class="menu-icon"/>
            </MenuItem>
        </Menu>
    </Footer>
</Layout>

