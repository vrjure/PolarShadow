<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PolarShadow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PolarShadow"
    xmlns:page="clr-namespace:PolarShadow.Pages"
    Shell.FlyoutBehavior="{OnIdiom Locked, Desktop = Locked, Tablet = Locked, Phone = Disabled}">
    <FlyoutItem Title="MyCollections">
        <ShellContent ContentTemplate="{DataTemplate page:MyCollectionPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Search">
        <ShellContent ContentTemplate="{DataTemplate page:SearchPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Source">
        <ShellContent ContentTemplate="{DataTemplate page:SourceManagerPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Set">
        <ShellContent ContentTemplate="{DataTemplate page:ConfigurePage}"/>
    </FlyoutItem>
</Shell>
