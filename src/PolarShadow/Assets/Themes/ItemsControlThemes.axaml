<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Add Resources Here -->
	<ControlTheme TargetType="ItemsControl" x:Key="BaseTheme">
		<Setter Property="Template">
			<ControlTemplate>
				<Border Background="{TemplateBinding Background}"
						BorderBrush="{TemplateBinding BorderBrush}"
						BorderThickness="{TemplateBinding BorderThickness}"
						CornerRadius="{TemplateBinding CornerRadius}"
						Padding="{TemplateBinding Padding}">
					<ItemsPresenter Name="PART_ItemsPresenter"
									ItemsPanel="{TemplateBinding ItemsPanel}"/>
				</Border>
			</ControlTemplate>
		</Setter>
	</ControlTheme>
	
	<ControlTheme TargetType="ItemsControl"  x:Key="Card" BasedOn="{StaticResource BaseTheme}">
		<Setter Property="ItemsPanel">
			<ItemsPanelTemplate>
				<WrapPanel/>
			</ItemsPanelTemplate>
		</Setter>	
		<Setter Property="ItemContainerTheme" Value="{StaticResource CardItemPresenter}"/>
	</ControlTheme>

	<ControlTheme TargetType="ItemsControl" x:Key="Vertical" BasedOn="{StaticResource BaseTheme}">
		<Setter Property="ItemsPanel">
			<ItemsPanelTemplate>
				<StackPanel Orientation="Vertical"/>
			</ItemsPanelTemplate>
		</Setter>
		<Setter Property="ItemContainerTheme" Value="{StaticResource VerticalItemPresenter}"/>
	</ControlTheme>

	<ControlTheme TargetType="ItemsControl" x:Key="Horizontal" BasedOn="{StaticResource BaseTheme}">
		<Setter Property="ItemsPanel">
			<ItemsPanelTemplate>
				<StackPanel Orientation="Horizontal"/>
			</ItemsPanelTemplate>
		</Setter>
		<Setter Property="ItemContainerTheme" Value="{StaticResource HorizontalItemPresenter}"/>
	</ControlTheme>

	<ControlTheme TargetType="ContentPresenter" x:Key="CardItemPresenter">
		<Setter Property="Width" Value="{StaticResource CardItemWidth}"/>
		<Setter Property="Height" Value="{StaticResource CardItemHeight}"/>
		<Setter Property="CornerRadius" Value="{StaticResource CardItemCornerRadius}"/>
		<Setter Property="BoxShadow" Value="0 0 15 0 LightGray"/>
		<Setter Property="Margin" Value="8"/>
	</ControlTheme>

	<ControlTheme TargetType="ContentPresenter" x:Key="VerticalItemPresenter">
		<Setter Property="Height" Value="{StaticResource VerticalItemHeight}"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="BoxShadow" Value="0 0 15 0 LightGray"/>
		<Setter Property="Margin" Value="8"/>
	</ControlTheme>

	<ControlTheme TargetType="ContentPresenter" x:Key="HorizontalItemPresenter">
		<Setter Property="Margin" Value="8"/>
	</ControlTheme>
</ResourceDictionary>
