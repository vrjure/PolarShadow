<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PolarShadow.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.Resources>
		<FontFamily x:Key="segoeIcon" >/Assets/Fonts/SegoeFluentIcons.ttf#Segoe Fluent Icons</FontFamily>
		<FontFamily x:Key="remixIcon" >/Assets/Fonts/remixicon.ttf#remixicon</FontFamily>

		<!--FontSize-->
		<x:Double x:Key="DefaultFontSize">18</x:Double>
		<x:Double x:Key="DefaultPointerOverFontSize">21</x:Double>
		<x:Double x:Key="DefaultIconFontSize">23</x:Double>
		<x:Double x:Key="DefaultPointerOverIconFontSize">24</x:Double>
		<x:Double x:Key="TitleFontSize">20</x:Double>
		
		<!--Width/Height-->
		<x:Double x:Key="TitleBarHeight">40</x:Double>
		<x:Double x:Key="ListBoxWrapPanelItemWidth">180</x:Double>
		
		<!--slider-->
		<GridLength x:Key="SliderPreContentMargin">auto</GridLength>
		<GridLength x:Key="SliderPostContentMargin">auto</GridLength>
		<x:Double x:Key="SliderHorizontalHeight">10</x:Double>
		<x:Double x:Key="SliderHorizontalThumbWidth">10</x:Double>
		<x:Double x:Key="SliderHorizontalThumbHeight">10</x:Double>
		
		<!--Colors-->
		<Color x:Key="TitleBarColor">#f3f3f3</Color>

		<!--Path-->
