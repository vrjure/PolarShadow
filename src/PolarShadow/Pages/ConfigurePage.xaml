<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PolarShadow.Pages.ConfigurePage"
             xmlns:vm="clr-namespace:PolarShadow.Pages.ViewModels"
             x:DataType="vm:ConfigPageViewModel">
    <Grid ColumnDefinitions="*,8*,*">
        <TableView Intent="Settings"
                   Grid.Column="1">
            <TableRoot>
                <TableSection Title="Server">
                    <SwitchCell Text="Enable" On="{Binding UserServer, Mode=TwoWay}"/>
                    <EntryCell Label="Uri" Placeholder="address" Text="{Binding ServerAddress,Mode=TwoWay}"/>
                </TableSection>
            </TableRoot>
        </TableView>
    </Grid>
</ContentPage>