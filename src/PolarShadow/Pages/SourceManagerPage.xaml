<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PolarShadow.Pages.SourceManagerPage"
             xmlns:vm ="clr-namespace:PolarShadow.Pages.ViewModels"
             x:DataType="vm:SourceManagerViewModel"
             xmlns:model ="clr-namespace:PolarShadow.Core;assembly=PolarShadow.Core">
    <Grid RowDefinitions="*,30">
        <CollectionView ItemsSource="{Binding Sites}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:SiteOption">
                    <Label Text="{Binding Name}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <HorizontalStackLayout Grid.Row="1">
            <Button Text="Import"
                    Command="{Binding ImportClickCommand}"
                    HorizontalOptions="Center"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>