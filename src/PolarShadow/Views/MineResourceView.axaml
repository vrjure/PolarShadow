<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PolarShadow.Views.MineResourceView"
			 xmlns:vm="using:PolarShadow.ViewModels"
			 xmlns:m="using:PolarShadow.Models"
			 xmlns:ctrl="using:PolarShadow.Controls"
			 x:DataType="vm:MineResourceViewModel"
			 x:CompileBindings="True">
	<Grid Margin="10">
		<ListBox Background="Transparent"
				 ItemsSource="{Binding MineResource}">
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel/>
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
			<ListBox.ItemTemplate>
				<DataTemplate DataType="m:ResourceViewData">
					<StackPanel Orientation="Vertical"
								MaxWidth="120">
						<Image ctrl:ImageAttached.Src="{Binding Image}"
							   ctrl:ImageAttached.Cache="{Binding $parent[ListBox].((vm:MineResourceViewModel)DataContext).Cache}"/>
						<TextBlock Text="{Binding Text}"
								   TextWrapping="Wrap"/>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</UserControl>
