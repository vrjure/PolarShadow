<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:ps="https://github.com/PolarShadow"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PolarShadow.Views.VideoPlayerView"
			 x:DataType="ps:VideoPlayerViewModel"
			 x:CompileBindings="True"
			 ps:PageLoadAttached.RegisterLoad="True"
			 Background="Black">
	<Border Padding="{Binding Padding}">
		<Panel>
			<ps:VideoView MediaPlayer="{Binding MediaPlayer}" FullScreen="{Binding FullScreen}">
				<ps:MediaPlayerController MediaPlayer="{Binding MediaPlayer}"
							  Title="{Binding Title}"
							  FullScreen="{Binding FullScreen, Mode=TwoWay}"
							  ShowNext="{Binding ShowNext}"
							  ShowPrevious="{Binding ShowPrevious}"/>
			</ps:VideoView>		
		</Panel>
	</Border>
</UserControl>
