<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:ps="https://github.com/PolarShadow"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PolarShadow.Views.VideoPlayerView"
			 x:DataType="ps:VideoPlayerViewModel"
			 x:CompileBindings="True"
			 ps:PageLoadAttached.RegisterLoad="True"
			 Background="Black">
	<Border Padding="{Binding Padding}">
		<OnPlatform>
			<OnPlatform.Default>
				<ps:VideoView MediaPlayer="{Binding MediaPlayer}" FullScreen="{Binding FullScreen}">
					<ps:MediaPlayerController MediaPlayer="{Binding MediaPlayer}"
								  Title="{Binding Title}"
								  FullScreen="{Binding FullScreen, Mode=TwoWay}"/>
				</ps:VideoView>
			</OnPlatform.Default>
			<OnPlatform.Android>
				<ps:MediaPlayerController MediaPlayer="{Binding MediaPlayer}"
										  Title="{Binding Title}"
										  FullScreen="{Binding FullScreen, Mode=TwoWay}"
										  x:Name="Part_Controller">
					<ps:VideoView x:Name="Part_VideoView" MediaPlayer="{Binding MediaPlayer}" FullScreen="{Binding FullScreen}"/>
				</ps:MediaPlayerController>
			</OnPlatform.Android>
		</OnPlatform>
			
	</Border>
</UserControl>
