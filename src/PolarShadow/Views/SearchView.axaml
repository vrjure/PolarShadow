<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PolarShadow.Views.SearchView"
			 xmlns:ctrl="using:PolarShadow.Controls"
			 xmlns:vm="using:PolarShadow.ViewModels"
			 x:DataType="vm:SearchViewModel"
			 x:CompileBindings="True">
	<ctrl:ToolBarAttached.ToolBar>
		<!--Search box-->
		<ctrl:ToolBarTemplate ToolBar="{x:Static vm:TopLayoutViewModel.CenterTitleBarContainer}">
			<Border Background="White"
					Height="25"
					CornerRadius="25"
					Padding="5,0">
				<StackPanel Orientation="Horizontal"
							Spacing="3">
					<TextBlock Classes="icon"
							   Text="&#xF0D1;"
							   FontSize="15"
							   VerticalAlignment="Center">
					</TextBlock>
					<TextBox BorderThickness="0"
							 Width="150"
							 VerticalAlignment="Center"
							 Classes="nofocus"
							 CornerRadius="25">

					</TextBox>
				</StackPanel>
			</Border>
		</ctrl:ToolBarTemplate>
	</ctrl:ToolBarAttached.ToolBar>
</UserControl>
