<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:ps="https://github.com/PolarShadow"
			 xmlns:psr="using:PolarShadow.Resources"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PolarShadow.Views.SearchView"
			 x:DataType="ps:SearchViewModel"
			 x:CompileBindings="True"
			 ps:PageLoadAttached.RegisterLoad="True">
	<ps:ToolBarAttached.ToolBar>
		<!--Search box-->
		<ps:ToolBarTemplate ToolBar="{x:Static ps:TopLayoutViewModel.CenterTitleBarContainer}">
			<Grid ColumnDefinitions="*,2*,*">
				<ps:SearchBox Grid.Column="1"
								SearchText="{Binding SearchText, Mode=TwoWay}"
								SearchCommand="{Binding SearchCommand}"
								ClearCommand="{Binding ClearCommand}"/>
			</Grid>
		</ps:ToolBarTemplate>
	</ps:ToolBarAttached.ToolBar>

	<Grid Margin="10">
		<ScrollViewer>
			<StackPanel Orientation="Vertical">
				<ItemsControl ItemsSource="{Binding SearchResult}"
						 Background="White">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<WrapPanel ItemWidth="{StaticResource ListBoxWrapPanelItemWidth}"/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate DataType="psr:Resource">
							<Button Command="{Binding $parent[ItemsControl].((ps:SearchViewModel)DataContext).ItemClickCommand}"
									CommandParameter="{Binding}"
									Classes="gridItem">
								<StackPanel Orientation="Vertical">
									<Image ps:ImageAttached.Src="{Binding ImageSrc}"
										   ps:ImageAttached.Cache="{Binding $parent[ItemsControl].((ps:SearchViewModel)DataContext).ImageCache}"/>
									<TextBlock Text="{Binding Name}"
											   TextWrapping="Wrap"/>
								</StackPanel>
							</Button>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
				<PathIcon Classes.spin="{Binding IsLoading}"
						  IsVisible="{Binding IsLoading}"
						  Data="{StaticResource loader2}">
				</PathIcon>
				<Button Command="{Binding LoadMoreCommand}"
						Content="&#xEF78;"
						Classes="icon"
						HorizontalAlignment="Center"
						IsVisible="{Binding ShowLoadMore}">
					
				</Button>
			</StackPanel>
		</ScrollViewer>
		<TextBlock Classes="empty"
				   FontSize="50"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"
				   IsVisible="{Binding !HasData}"/>
	</Grid>
</UserControl>
